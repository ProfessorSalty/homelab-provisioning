data_dir = "{{ nomad_data_dir  }}"
bind_addr = "{{  nomad_bind_addr  }}"

vault {
    enabled = true
    address = "{{ vault_addr }}"
    namespace = "{{ vault_namespace }}"
    token = "{{ vault_token }}"
    create_from_role = "{{ vault_role }}"
}

consul {
    address = "{{ consul_addr }}:{{ consul_http_port }}"
    token = "{{ consul_token }}"
}

plugin "docker" {
    volumes {
        enabled = true
    }
}

