#cloud-config
autoinstall:
    version: 1
    locale: en_US
    keyboard:
        layout: en
    %{ if apt_proxy_address }
    apt:
        proxy: {{ apt_proxy_address }}
    %{ endif }
    ssh:
        install-server: true
        allow-pw: false
    packages:
        - qemu-guest-agent
    package_update: true
    package_upgrade: true
    identity:
        hostname: {{ hostname }}
        username: {{ template_user.name }}
        password: {{ template_user.password }}
