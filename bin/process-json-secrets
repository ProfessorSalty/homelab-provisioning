#!/usr/bin/env python3

import json
import sys


def main(filename: str, target: str):
    with open(filename) as f:
        secrets_data = json.loads(f.read())
        flat_data = {**secrets_data['proxmox'], **secrets_data['system'], **secrets_data['proxmox-templates'][target]}
        sys.stdout.write(json.dumps(flat_data))
        sys.exit(0)


if __name__ == '__main__':
    main(sys.argv[1], sys.argv[2])
